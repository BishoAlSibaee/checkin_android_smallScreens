<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_wifi_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="words_wifi_name"
            android:gravity="center_vertical"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/wifi_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@drawable/icon_right"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textSize="16dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_wifi_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="words_wifi_pwd"

            android:gravity="center_vertical"
            android:textSize="16dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_toRightOf="@id/tv_wifi_pwd"
            android:id="@+id/wifi_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical|end"
            android:background="@null"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:textSize="16dp"/>
    </RelativeLayout>
    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/tv_gateway_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="words_gateway_name"

            android:gravity="center_vertical"
            android:textSize="16dp"
            android:layout_marginRight="5dp"/>
        <EditText
            android:layout_toRightOf="@id/tv_gateway_name"
            android:id="@+id/gateway_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:gravity="center_vertical|end"
            android:background="@null"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignParentRight="true"
            android:textSize="16dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btn_init_gateway"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="add"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"/>

</LinearLayout>
